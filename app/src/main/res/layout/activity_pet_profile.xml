  <EditText
      android:layout_below="@+id/textView9"
      android:id="@+id/editTextText3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:inputType="text"
 />

  <TextView
      android:layout_below="@+id/editTextText3"
      android:id="@+id/textView10"
      android:layout_width="match_parent"
      android:layout_height="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="Giá»‘ng"
 />

  <EditText
      android:layout_below="@+id/textView10"
      android:id="@+id/editTextText4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:inputType="text"
 />



  <TextView
      android:layout_below="@+id/editTextText4"
      android:id="@+id/textView11"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/pet_weight"
/>

  <EditText
      android:layout_below="@+id/textView11"
      android:id="@+id/editTextNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="11dp"
      android:inputType="number"
/>
  <TextView
      android:layout_below="@+id/editTextNumber"
      android:id="@+id/textView12"
      android:layout_width="62dp"
      android:layout_height="16dp"
      android:text="@string/pet_sex"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"

/>

  <RadioButton
      android:layout_below="@+id/textView12"
      android:id="@+id/radioButton"
      android:layout_width="93dp"
      android:layout_height="39dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/pet_male"
/>

  <RadioButton
      android:layout_below="@+id/textView12"
      android:layout_toRightOf="@+id/radioButton"
      android:id="@+id/radioButton2"
      android:layout_width="93dp"
      android:layout_height="39dp"
      android:layout_marginStart="56dp"
      android:text="@string/pet_female"
 />
  <TextView
      android:layout_below="@id/radioButton"
      android:id="@+id/textView13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/pet_date_of_birth" />

  <EditText
      android:layout_below="@+id/textView13"
      android:id="@+id/editTextDate"
      android:layout_width="match_parent"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_height="wrap_content"
      android:inputType="date"
/>

  <Button
      android:layout_below="@+id/editTextDate"
      android:id="@+id/button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:layout_marginStart="150dp"
      android:text="@string/update"
 />

</RelativeLayout>